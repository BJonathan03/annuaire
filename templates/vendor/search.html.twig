{% extends 'base.html.twig' %}

{% block body %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">

                    <div class="document-title">
                        {% if vendors.getTotalItemCount != 0 %}
                        <h1>Votre recherche a généré {{ vendors.getTotalItemCount }} résultats !</h1>
                        {% else %}
                        <h1>Malheureusement, votre recherche n'a généré aucune résultat... Désolé !</h1>
                        {% endif %}

                    </div><!-- /.document-title -->

                    {% for vendor in vendors %}

                        <h3>{{ vendor.name }} </h3>


                        <div class="cards-row">

                            <div class="card-row">
                                <div class="card-row-inner">
                                    <div class="card-row-image" data-background-image="{{ asset('assets/img/tmp/product-1.jpg') }}">
                                        <div class="card-row-label">{{ vendor.locality.locality }}</div>
                                        <!-- /.card-row-label -->

                                        <div class="card-row-price">{{ vendor.name }}</div><!-- -->

                                    </div><!-- /.card-row-image -->

                                    <div class="card-row-properties">
                                        <dl>

                                            <dd>Adresse</dd>
                                            <dt>{{ vendor.adresse }} {{ vendor.number }}</dt>

                                            <dd>Localité</dd>
                                            <dt>{{ vendor.cp.cp }} {{ vendor.locality.locality }}</dt>

                                            <dd>Website</dd>
                                            <dt><a href="{{ vendor.website }}">{{ vendor.website }}</a></dt>


                                            <dd>Rating</dd>
                                            <dt>
                                                <div class="card-row-rating">
                                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i
                                                            class="fa fa-star"></i> <i class="fa fa-star"></i> <i
                                                            class="fa fa-star"></i>
                                                </div><!-- /.card-row-rating -->
                                            </dt>

                                            <dd>Informations complémentaires :</dd>
                                            <dt><a href="{{ path('vendor_show', {'id':vendor.id}) }}">C'est ici...
                                                    ;) </a></dt>

                                        </dl>
                                    </div><!-- /.card-row-properties -->
                                </div><!-- /.card-row-inner -->
                            </div><!-- /.card-row -->
                        </div>
                    {% endfor %}


                    <div class="pager">

                        {{ knp_pagination_render(vendors) }}

                    </div><!-- /.pagination -->
                </div><!-- /.content -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->

{% endblock %}