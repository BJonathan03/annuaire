{% extends 'base.html.twig' %}

{% block body %}
    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">


                    <div class="document-title">
                        <h1>{{ vendor.name }}</h1>
                        <h2 style="color:white">Nos services : </h2>
                        {% for services in vendor.service %}
                            <ul class="breadcrumb">
                                <li><a href="{{ path('service_show', {'id':services.id}) }}">{{ services.name }}</a>
                                </li>
                            </ul>
                        {% endfor %}

                    </div><!-- /.document-title -->
                    {% for pictures in vendor.pictures %}
                        <img src="{{ pictures.url }}">
                    {% endfor %}
                    <div class="mb80">
                        <div class="hero-slider">
                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner" role="listbox">
                                    {% for pictures in vendor.pictures %}
                                        <div class="item">
                                            <div class="item-bg"
                                                 style="background-image: url('{{ pictures.url }}')"></div>
                                            <div class="card-row-image" data-background-image="{{ pictures.url }}">
                                                <div class="carousel-caption">
                                                    <div class="hero-slider-content">
                                                        <h1>{{ pictures.sequence }}</h1>
                                                    </div><!-- /.hero-slider-content -->

                                                </div><!-- /.carousel-caption -->
                                            </div><!-- /.item -->
                                        {% endfor %}
                                    </div><!-- /.carousel-inner -->

                                    <!-- Controls -->
                                    <a class="left carousel-control" href="#carousel-example-generic" role="button"
                                       data-slide="prev">
                                        <i class="fa fa-long-arrow-left"></i>
                                    </a>

                                    <a class="right carousel-control" href="#carousel-example-generic" role="button"
                                       data-slide="next">
                                        <i class="fa fa-long-arrow-right"></i>
                                    </a>
                                </div>

                            </div><!-- /.hero-slider -->

                        </div>
                        <div class="posts post-detail">


                            <div class="row">
                                <div class="col-sm-4">
                                    <h3>Addresse</h3>

                                    <p>
                                        {{ vendor.adresse }} {{ vendor.number }}<br>
                                        {{ vendor.cp.cp }} {{ vendor.locality.locality }}<br>
                                        <a href="{{ vendor.website }}"> {{ vendor.website }} </a>
                                    </p>

                                </div><!-- /.col-sm-4 -->

                                <div class="col-sm-4">
                                    <h3>Contacts</h3>

                                    <p>
                                        Par telephone : {{ vendor.phone }} <br>
                                        Par email : <a
                                                href="mailto({{ vendor.emailContact }}"> {{ vendor.emailContact }}</a>
                                    </p>
                                </div><!-- /.col-sm-4 -->

                                <div class="col-sm-4">
                                    <h3>Social Profiles</h3>

                                    <ul class="social-links nav nav-pills">
                                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                    </ul>
                                </div><!-- /.col-sm-4 -->
                            </div><!-- /.row -->

                        </div><!-- /.comments -->
                    </div>
                </div>
            </div>
        </div>

{% endblock %}