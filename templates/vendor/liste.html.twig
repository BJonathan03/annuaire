{% extends 'base.html.twig' %}


{% block body %}


    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">

                    <div class="document-title">
                        <h1>Bienvenue dans la liste de nos prestataires de services</h1>

                    </div><!-- /.document-title -->


                    {% include 'search.html.twig' %}


                    <h2 class="page-title">
                      Nos professionnels sont à votre disposition !!
                    </h2><!-- /.page-title -->

                    {% for vendor in vendors %}
                        {% if vendor.banni == 0 %}
                        <h3>{{ vendor.name }} </h3>


                        <div class="cards-row">

                            <div class="card-row">
                                <div class="card-row-inner">
                                    <div class="card-row-image" data-background-image="assets/img/tmp/product-1.jpg">
                                        <div class="card-row-label">{{ vendor.locality.locality }}</div>
                                        <!-- /.card-row-label -->

                                        <div class="card-row-price">{{ vendor.name }}</div><!-- -->

                                    </div><!-- /.card-row-image -->

                                    <div class="card-row-properties">
                                        <dl>

                                            <dd>Adresse</dd>
                                            <dt>{{ vendor.adresse }} {{ vendor.number }}</dt>

                                            <dd>Localité</dd>
                                            <dt>{{ vendor.cp.cp }} {{ vendor.locality.locality }}</dt>

                                            <dd>Website</dd>
                                            <dt><a href="{{ vendor.website }}">{{ vendor.website }}</a></dt>


                                            <dd>Rating</dd>
                                            <dt>
                                                <div class="card-row-rating">
                                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i
                                                            class="fa fa-star"></i> <i class="fa fa-star"></i> <i
                                                            class="fa fa-star"></i>
                                                </div><!-- /.card-row-rating -->
                                            </dt>

                                            <dd>Informations complémentaires :</dd>
                                            <dt><a href="{{ path('vendor_show', {'id':vendor.id}) }}">C'est ici...
                                                    ;) </a></dt>

                                        </dl>
                                    </div><!-- /.card-row-properties -->
                                </div><!-- /.card-row-inner -->
                            </div><!-- /.card-row -->
                        </div>
                        {% endif %}
                    {% endfor %}


                    <div class="pager">
                         {{ knp_pagination_render(vendors)  }}
                    </div><!-- /.pagination -->
                </div><!-- /.content -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->



{% endblock %}