<header class="header">
    <div class="header-wrapper">
        <div class="container">
            <div class="header-inner">
                <div class="header-logo">
                    <a href="{{ asset(path('home')) }}">
                        <img src="{{ asset('assets/img/logo.png') }}" alt="Logo">
                        <span>Annuaire</span>
                    </a>
                </div><!-- /.header-logo -->

                <div class="header-content">
                    <div class="header-top">

                        <ul class="header-nav-secondary nav nav-pills">

                            {% if app.user %}
                                <li class="nav-item dropdown">
                                  {#  <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                                        <img src="{{ app.user.picture }}" class="avatar avatar-mini" alt="Avatar de {{ app.user.fullName }}"> {{ app.user.fullName }}
                                    </a>#}
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                                        {{ app.user.name }}
                                    </a>
                                    {#Quand on clique su le lien avec l'id accountDropdownLink, il ouvrira la dropdown ci dessous grace à aria-labelledby par contre, pas oublier le data-toggle pour dire que c'est une dropdown ci-dessus#}
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                                    {#    <a href="{{ path('ads_create') }}" class="dropdown-item">Créer une annonce</a>
                                        <div class="dropdown-divider"></div>
                                        <a href="{{ path('account_index') }}" class="dropdown-item">Mon compte</a>#}
                                        <a href="{{ path('vendor_profile') }}" class="dropdown-item">Modifier mon profil</a>
                                        <div class="dropdown-divider"></div>
                                        <a href="{{ path('security_logout') }}" class="dropdown-item">Déconnexion</a>
                                    </div>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a href="{{ path('security_register') }}" class="nav-link">Inscription</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('security_login') }}" class="nav-link">Connexion</a>
                                </li>
                            {% endif %}


                        </ul>
                    </div><!-- /.header-top -->

                    <div class="header-bottom">
                        <div class="header-action">
                            <a href="{{ asset('listing-submit.html')}}" class="header-action-inner" title="Add Listing" data-toggle="tooltip" data-placement="bottom">
                                <i class="fa fa-plus"></i>
                            </a><!-- /.header-action-inner -->
                        </div><!-- /.header-action -->

                        <ul class="header-nav-primary nav nav-pills collapse navbar-collapse">
                            <li >
                                <a href="{{ path('home') }}"> Home </a>
                            </li>
                            <li >
                                <a href="{{ path('service') }}"> Services </a>

                                <ul class="sub-menu">
                                    {{ render(controller(
                                        'App\\Controller\\ServiceController::listingServices'
                                    )) }}
                                </ul>
                            </li>
                            <li >
                                <a href="{{ path('vendors') }}"> Prestataires </a>

                                <ul class="sub-menu">
                                    {{ render(controller(
                                        'App\\Controller\\VendorController::listingVendors'
                                    )) }}
                                </ul>
                            </li>
                        </ul>
                        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".header-nav-primary">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div><!-- /.header-bottom -->

                    {% for label, messages in app.flashes %}

                        <div class="container">
                            <div class="alert alert-{{ label }}">
                                {% for message in messages %}
                                    <p>{{ message | raw }}</p>
                                {% endfor %}
                            </div>
                        </div>

                    {% endfor %}
                </div><!-- /.header-content -->
            </div><!-- /.header-inner -->
        </div><!-- /.container -->
    </div><!-- /.header-wrapper -->
</header><!-- /.header -->