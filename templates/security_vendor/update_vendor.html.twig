{% extends 'base.html.twig' %}


{% block body %}

    {{ form_start(form) }}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-lg-3">
                        <div class="sidebar">
                            <div class="widget">
                                <div class="user-photo">

                                </div><!-- /.user-photo -->
                            </div><!-- /.widget -->
                            <div  class="widget">
                               {{ form_row(form.pictureFile) }}
                            </div>

                            <div class="widget">

                                <ul class="menu-advanced">
                                    <li class="active"><a href="{{ path('vendor_profile') }}"><i class="fa fa-user"></i> Modifier votre profil </a></li>
                                    <li><a href="{{ path('vendor_stage') }}"><i class="fa fa-star"></i> Mes stages </a></li>
                                    <li><a href="{{ path('vendor_password') }}"><i class="fa fa-key"></i> Password</a></li>
                                    <li><a href="{{ path('security_logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
                                </ul>
                            </div><!-- /.widget -->

                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->

                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title">
                                <h1>Modifier votre profile</h1>
                            </div><!-- /.page-title -->

                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Information de contact
                                </h3>

                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.name) }}
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.phone) }}
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.emailContact) }}
                                    </div><!-- /.form-group -->
                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.tva) }}
                                    </div><!-- /.form-group -->
                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.website) }}
                                    </div><!-- /.form-group -->
                                </div><!-- /.row -->
                            </div>

                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Vos services
                                </h3>
                                {{ form_row(form.service) }}
                            </div>
                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Address de l'entreprise

                                    <a href="#" class="btn btn-primary btn-xs pull-right">Save</a>
                                </h3>

                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.adresse) }}
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.number) }}
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.cp) }}
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        {{ form_row(form.locality) }}
                                    </div><!-- /.form-group -->

                                </div><!-- /.row -->
                            </div>

                            <button type="submit" class="btn btn-success">

                                Valider vos modificaitons !

                            </button>

                        </div><!-- /.content -->
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->


    {{ form_end(form) }}







{% endblock %}